{
  "source": ["./tokens/tokens.light.json"],
  "platforms": {
    "css": {
      "transforms": [
        "attribute/cti",
        "name/cti/kebab",
        "time/seconds",
        "content/icon",
        "shadow/css",
        "size/rem",
        "color/css"
      ],
      "prefix": "s",
      "buildPath": "dist/css/",
      "options": {
        "selector": ":root, html.theme-light"
      },
      "files": [
        {
          "destination": "styles.light.custom-properties.css",
          "format": "css/variables-design-token-comments"
        }
      ]
    },
    "flutter": {
      "transforms": [
        "attribute/custom",
        "name/cti/camel",
        "color/hex8flutter",
        "size/flutter/remToDouble",
        "content/flutter/literal",
        "asset/flutter/literal",
        "font/flutter/literal",
        "fontWeight/flutter"
      ],
      "prefix": "",
      "buildPath": "dart/lib/",
      "files": [
        {
          "className": "SwirlDesignTokensLight",
          "destination": "styles.light.dart",
          "format": "flutter/class.dart"
        }
      ]
    },
    "json": {
      "prefix": "s",
      "buildPath": "dist/",
      "files": [
        {
          "destination": "styles.light.json",
          "format": "json"
        }
      ]
    },
    "less": {
      "transforms": [
        "attribute/cti",
        "name/cti/kebab",
        "time/seconds",
        "content/icon",
        "shadow/css",
        "size/rem",
        "color/hex"
      ],
      "prefix": "s",
      "buildPath": "dist/less/",
      "files": [
        {
          "destination": "styles.light.less",
          "format": "less/variables"
        }
      ]
    },
    "scss": {
      "transforms": [
        "attribute/cti",
        "name/cti/kebab",
        "time/seconds",
        "content/icon",
        "shadow/css",
        "size/rem",
        "color/css"
      ],
      "prefix": "s",
      "buildPath": "dist/scss/",
      "files": [
        {
          "destination": "styles.light.scss",
          "format": "scss/variables"
        }
      ]
    },
    "tailwind": {
      "transformGroup": "css",
      "buildPath": "dist/tailwind/",
      "files": [
        {
          "destination": "light.json",
          "format": "css/tailwind"
        }
      ]
    }
  }
}
